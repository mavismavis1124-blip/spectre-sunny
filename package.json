{
  "name": "spectre-ai-trading",
  "version": "1.0.0",
  "description": "Spectre AI Trading Platform - A modern crypto trading interface built with React",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:safe": "NODE_OPTIONS=--max-old-space-size=4096 vite",
    "dev:all": "npm run server & npm run dev",
    "dev:both": "node scripts/start-dev.mjs",
    "setup": "node scripts/setup-apis.mjs",
    "build": "vite build",
    "preview": "vite preview",
    "server": "cd server && node index.js",
    "start": "cd server && node index.js",
    "server:install": "cd server && npm install",
    "remotion:studio": "remotion studio src/remotion/index.jsx",
    "remotion:render": "remotion render src/remotion/index.jsx",
    "remotion:preview": "remotion preview src/remotion/index.jsx"
  },
  "keywords": [
    "trading",
    "crypto",
    "react",
    "spectre-ai"
  ],
  "author": "Spectre AI",
  "license": "MIT",
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.34.0",
    "@remotion/cli": "^4.0.419",
    "@remotion/player": "^4.0.419",
    "elevenlabs": "^1.59.0",
    "framer-motion": "^12.33.0",
    "html2canvas": "^1.4.1",
    "i18next": "^25.8.6",
    "msedge-tts": "^2.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^7.13.0",
    "remotion": "^4.0.419"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
